{
    "name": "Weather Extension",
    "version": "1.0",
    "description": "A Chrome Weather Extension",
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://api.openweathermap.org/*"
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
      
    }
  }
  